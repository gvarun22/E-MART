<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <package name="helloworld" extends="struts-default">
     
        <action name="Search" 
                class="com.emart.SearchItemAction" 
                method="execute">
            <result name="success">/CategorySearchResults.jsp</result>
            <result name="error">/Failure.jsp</result>
        </action>
    </package>
    <package name="validateVard" extends="struts-default">
     
        <action name="cardVerify" 
                class="com.emart.CreditCardVerifyAction" 
                method="execute">
            <result name="success">/Success.jsp</result>
            <result name="error">/Failure.jsp</result>
        </action>
    </package>
    <package name="selectitem" extends="struts-default">
        <action name="callSelectItemActionClass" 
                class="com.emart.SelectItemAction" 
                method="execute">
            <result name="success">/Item.jsp</result>
            <result name="error">/Failure.jsp</result>
        </action>
    </package>
    
    <package name="itempurchase" extends="struts-default">
        <action name="purchase" 
                class="com.emart.PurchaseActionClass" 
                method="execute">
            <result name="success">/verifyCard.jsp</result>
            <result name="error">/Item.jsp</result>
        </action>
    </package>
    <package name="login" extends="struts-default">
        <action name="login" class="com.emart.LoginAction"
        method="execute">
            <result name="success">CategorySearch.jsp</result>
            <result name="input">search.jsp</result>
        </action>
    </package>
    
    <package name="UserRegistration" extends="struts-default">
        <action name="RegisterAction" class="com.emart.RegisterAction"
        method="execute">
            <result name="success">/CategorySearch.jsp</result>
            <result name="input">/search.jsp</result>
        </action>
    </package>
    <package name="SelectAction" extends="struts-default">
        <action name="SelectAction" class="com.emart.SelectAction"
        method="execute">
        </action>
    </package>
    <package name="NavigateTORegister" extends="struts-default">
        <action name="NavigateTORegister" class="com.emart.NavigateTORegister"
        method="execute">
             <result name="success">/UserRegistration.jsp</result>
        </action>
    </package>
    
</struts>